  "title": "Windows Shortcuts",
  "rules": [
    {
      "description": "Insert (Ctrl) [+Terminal Emulators]",
      "manipulators": [
        {
          "from": {
            "key_code": "insert",
            "modifiers": {"mandatory": ["control"], "optional": ["any"]}
          },
          "to": [{
              "key_code": "c",
              "modifiers": ["command"]
          }],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^org\\.virtualbox\\.app\\.VirtualBoxVM$",
                "^com\\.microsoft\\.rdc\\.macos$"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    },
